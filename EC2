AWSTemplateFormatVersion: "2010-09-09"
Description: "CloudFormation template to create an EC2 instance of type t2.micro"

Resources:
  EC2Instance:
    Type: "AWS::EC2::Instance"
    Properties:
      InstanceType: "t2.micro"
      ImageId: "Amazon Linux 2023 AMI"  # Replace with your desired AMI ID
      SecurityGroups:
        - !Ref InstanceSecurityGroup
      KeyName: "aws_instance_key"  # Replace with your EC2 key pair name

  InstanceSecurityGroup:
    Type: "AWS::EC2::SecurityGroup"
    Properties:
      GroupDescription: "Security group for the EC2 instance"
      SecurityGroupIngress:
        - CidrIp: "0.0.0.0/0"
          IpProtocol: "tcp"
          FromPort: 22  # SSH
          ToPort: 22
      SecurityGroupEgress:
        - CidrIp: "0.0.0.0/0"
          IpProtocol: "-1"  # Allow all outbound traffic

Outputs:
  EC2InstanceIP:
    Description: "Public IP address of the EC2 instance"
    Value: !GetAtt EC2Instance.PublicIp
